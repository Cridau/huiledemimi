<h1>Ajouter une nouvelle huile</h1>
<%= form_for(@oil) do |f| %>
  <% if @oil.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @oil.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :note %>
    <%= f.text_field :note, class: 'form-control' %>
  </div>

  <div class="form-group">
    <p>Photo</p>
    <%= f.file_field :photo %>
    <%= f.file_field :photo_cache, as: :hidden %>
  </div>

  <div class="form-group">
    <%= f.label :article %>
    <%= f.text_area :article, class: 'form-control' %>
  </div>

  <%= f.submit "CrÃ©er", class: 'btn btn-primary' %>
  <%= link_to "Retour", oils_path, class: 'btn btn-primary' %>
<% end %>

